<!DOCTYPE html>
<html>
<head>
    <title>Chat Rooms</title>
    <% if (theme === 'light') { %>
      <link rel="stylesheet" type="text/css" href="/css/main_admin.css">
    <% } else { %>
        <link rel="stylesheet" type="text/css" href="/css/dark/dark_main_admin.css">
    <% } %>
    <link rel="icon" href="/images/atlantic_icon.ico" type="image/x-icon" />
</head>
<body>
    <%- include('topbar.ejs') %>
    <div class="content">
      <div class="add-room">
        <a href="/create_room" class="add-room-button">+ Add Room</a>
      </div>
      <div class="rooms">
        <h2 class="header">Chat Rooms</h2>
        <ul>
          <li>
            <div class="add-room">
              <a href="/dm_entry" class="add-room-button">Direct Messages</a>
            </div>
          </li>
          <% rooms.forEach(room => { %>
            <li>
              <div class="room-item">
                <a href="/room?roomId=<%= room.id %>"
                   class="<%= room.password === 'none' ? 'room-link normal-room' : 'room-link private-room' %>"
                   data-password="<%= room.password === 'none' ? 'Public' : 'Private; ' + room.password %>">
                  <%= room.name %>
                </a>
                <div class="room-icon">
                  <% if (theme === 'dark') { %>
                    <div >
                      <a class="delete-room" href="/deleteRoom?roomId=<%= room.id %>">Delete</a>
                    </div>
                    
                  <% } else { %>
                    <a href="/deleteRoom?roomId=<%= room.id %>">
                      <img src="/images/delete_room.png" alt="Delete Room">
                    </a>
                  <% } %>
                  <br>
                </div>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>    
    <footer class="footer">posydon 2023 v<%= version %> <a target=”_blank” href="https://github.com/p0syd0n/atlantic">Github</a></footer>
</body>
</html>
